From 58ad593306a766898e6b36aa27b9f5b6ee1842c5 Mon Sep 17 00:00:00 2001
From: "Chew, Tong Liang" <tong.liang.chew@intel.com>
Date: Tue, 20 Jul 2021 21:52:30 +0800
Subject: [PATCH] meson: version update

Signed-off-by: Chew, Tong Liang <tong.liang.chew@intel.com>
---
 src/egl/meson.build         | 2 +-
 src/gbm/meson.build         | 2 +-
 src/glx/meson.build         | 2 +-
 src/mapi/es1api/meson.build | 2 +-
 src/mapi/es2api/meson.build | 2 +-
 5 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/src/egl/meson.build b/src/egl/meson.build
index ab8f4e1fdbe..595830159d9 100644
--- a/src/egl/meson.build
+++ b/src/egl/meson.build
@@ -148,7 +148,7 @@ endif
 
 if not with_glvnd
   egl_lib_name = 'EGL' + get_option('egl-lib-suffix')
-  egl_lib_version = '1.0.0'
+  egl_lib_version = '1.2.0'
 else
   egl_lib_name = 'EGL_@0@'.format(glvnd_vendor_name)
   egl_lib_version = '0.0.0'
diff --git a/src/gbm/meson.build b/src/gbm/meson.build
index ccdc517fc56..230e67083a6 100644
--- a/src/gbm/meson.build
+++ b/src/gbm/meson.build
@@ -54,7 +54,7 @@ libgbm = shared_library(
   link_with : libloader,
   dependencies : [deps_gbm, dep_dl, dep_thread, idep_mesautil, idep_xmlconfig],
   gnu_symbol_visibility : 'hidden',
-  version : '1.0.0',
+  version : '1.1.0',
   install : true,
 )
 
diff --git a/src/glx/meson.build b/src/glx/meson.build
index 8f642d5e14b..c96f2f79e1c 100644
--- a/src/glx/meson.build
+++ b/src/glx/meson.build
@@ -109,7 +109,7 @@ endif
 
 if not with_glvnd
   gl_lib_name = 'GL'
-  gl_lib_version = '1.2.0'
+  gl_lib_version = '1.8.0'
 else
   gl_lib_name = 'GLX_@0@'.format(glvnd_vendor_name)
   gl_lib_version = '0.0.0'
diff --git a/src/mapi/es1api/meson.build b/src/mapi/es1api/meson.build
index 8b749b1a332..f42195e2492 100644
--- a/src/mapi/es1api/meson.build
+++ b/src/mapi/es1api/meson.build
@@ -48,7 +48,7 @@ libglesv1_cm = shared_library(
   link_with : libglapi,
   dependencies : [dep_thread, dep_libdrm, dep_m, dep_dl],
   soversion : host_machine.system() == 'windows' ? '' : '1',
-  version : '1.1.0',
+  version : '1.3.0',
   darwin_versions  : '3.0.0',
   name_prefix : 'lib',
   install : true,
diff --git a/src/mapi/es2api/meson.build b/src/mapi/es2api/meson.build
index 356c5760c49..a71cbce0d03 100644
--- a/src/mapi/es2api/meson.build
+++ b/src/mapi/es2api/meson.build
@@ -48,7 +48,7 @@ libgles2 = shared_library(
   link_with : libglapi,
   dependencies : [dep_thread, dep_libdrm, dep_m, dep_dl],
   soversion : host_machine.system() == 'windows' ? '' : '2',
-  version : '2.0.0',
+  version : '2.2.0',
   darwin_versions : '3.0.0',
   name_prefix : 'lib',
   install : true,
-- 
